@model List<Movies.ViewModels.TicketViewModel>
@{
    bool Admin = User.IsInRole("Admins");
}
<table class="table">
    <thead>
        <tr>
            <th>
                Movie
            </th>
            <th>
                Date and time
            </th>
            <th>
                Row
            </th>
            <th>
                Seat
            </th>
            <th>
                Hall
            </th>
            <th>
                Price
            </th>
            @if (Admin)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>
                    <a href="/Movies/Details/@t.MovieId">@t.Movie</a>
                </td>
                <td>
                    @t.SessionTime
                </td>
                <td>
                    @t.SeatRow
                </td>
                <td>
                    @t.SeatNum
                </td>
                <td>
                    @t.Hall
                </td>
                <td>
                    @t.Price
                </td>
                @if (Admin)
                {
                <td>
                        <a asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>