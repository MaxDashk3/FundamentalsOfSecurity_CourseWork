@model Movies.ViewModels.HallViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Hall</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rows" class="control-label"></label>
                <input asp-for="Rows" class="form-control" />
                <span asp-validation-for="Rows" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatsPerRow" class="control-label">Seats per row</label>
                <input asp-for="SeatsPerRow" class="form-control" />
                <span asp-validation-for="SeatsPerRow" class="text-danger"></span>
            </div>
            <div class="form-group">
                @for (int i = 0; i < ViewBag.Technologies.Count; i++)
                {
                    <input type="checkbox" id="TechId @i" name="TechId" value="@ViewBag.Technologies[i].Id" />
                    <label for="TechId @i">@ViewBag.Technologies[i].Name</label><br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

