@model IEnumerable<Movies.Models.Genre>

@{
    ViewData["Title"] = "Index";
}




<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <!-- Додайте клас moving-header для рухаючого заголовка -->
            <h2 class="text-center moving-header">Pick a genre that you like!</h2>


            <div class="genres">
                @foreach (var item in Model)
                {
                    <div class="genre">
                        <h2>@item.Name</h2>
                        <a asp-controller="Movies" asp-action="Index" asp-route-GenreId="@item.Id">Details</a>
                    </div>
                }
            </div>

            <!-- Рекламний блок знизу -->
            <div class="bottom-advertisement">
                <img src="~/Genres/images/реклама.jpg" alt="Advertisement" />
                <p>Тут може бути ваша реклама але Єва лохесса .</p>
            </div>

        </div>
    </div>
</div>


